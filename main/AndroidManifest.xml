<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kowndinya.sample">

    <application
        android:allowBackup="true"
        android:icon="@drawable/android"
        android:label="@string/app_name"
        android:roundIcon="@drawable/android"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainSplash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity1"
            android:parentActivityName=".MainSplash"/>
        <activity android:name=".MainActivity"
            android:parentActivityName=".MainActivity1"/>
        <activity android:name=".MainActivity2"
            android:parentActivityName=".MainActivity1"/>
        <activity android:name=".MessageActivity"/>
        <activity android:name=".DonateActivity" />


        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>