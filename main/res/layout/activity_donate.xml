<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:id="@+id/layout_donate"
    android:background="@android:color/black">
   <android.support.v7.widget.AppCompatImageView
       android:layout_width="75dp"
       android:layout_height="75dp"
       android:layout_marginTop="15dp"
       app:srcCompat="@drawable/gift"
       android:layout_gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:text="@string/help_donate"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:gravity="center"
            android:textStyle="bold" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="140dp"
        android:elevation="30dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:orientation="horizontal"
            android:background="@android:color/darker_gray">
            <android.support.v7.widget.AppCompatImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/coffee"/>
            <Button
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:id="@+id/b1"
                android:background="@android:color/holo_red_light"
                android:layout_gravity="center"
                android:text="$2 DONATE"
                android:onClick="donates"
                android:elevation="30dp"
                android:textColor="@android:color/white"
                android:layout_marginLeft="100dp"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="15dp"
        android:elevation="30dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:orientation="horizontal"
            android:background="@android:color/darker_gray">
            <android.support.v7.widget.AppCompatImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/pizza"/>
            <Button
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:id="@+id/b2"
                android:background="@android:color/holo_red_light"
                android:layout_gravity="center"
                android:text="$5 DONATE"
                android:onClick="donates"
                android:elevation="30dp"
                android:textColor="@android:color/white"
                android:layout_marginLeft="100dp"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="15dp"
        android:elevation="30dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:orientation="horizontal"
            android:background="@android:color/darker_gray">
            <android.support.v7.widget.AppCompatImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/foodtray"/>
            <Button
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:background="@android:color/holo_red_light"
                android:layout_gravity="center"
                android:id="@+id/b3"
                android:onClick="donates"
                android:text="$12 DONATE"
                android:elevation="30dp"
                android:textColor="@android:color/white"
                android:layout_marginLeft="100dp"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>